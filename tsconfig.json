{
  "include": ["src/**/*.ts", "src_old/Util.ts", "src_old/settings.ts", "src_old/libWrapperShared.ts", "src_old/df-chat-enhance.ts", "src_old/logger/DFAdventureLogProcessor.ts", "src/logger.js", "src/main.js", "src/settings.js"],
	"compilerOptions": {
		"incremental": true,
		"target": "ESNext",
    "useDefineForClassFields": true,
		"module": "esnext",
		"lib": [ "ESNext", "DOM" ],
    "types": ["fvtt-types"],
    "moduleResolution": "Bundler",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"],
		}
	},
}