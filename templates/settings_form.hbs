<form autocomplete="off" class="save-message-to-journal-entry settings-form">
   <div class="form-group">
      <label for="journalName">{{localize 'SMTJE.settings.configuration.journalSelection'}}</label>
      <select name="journalName">
         {{selectOptions journalNameOptions selected=journalName sort=true valueAttr="key" labelAttr="label"}}
      </select>
   </div>
   <div class="form-group">
      <label for="pageName">{{localize 'SMTJE.settings.configuration.pageSelection'}}</label>
      <select name="pageName">
         {{selectOptions pageNameOptions selected=pageName valueAttr="key" labelAttr="label"}}
      </select>
   </div>
   <p class="notes">
      {{localize 'SMTJE.settings.configuration.info.onlyEditableShown'}}<br/>
      {{localize 'SMTJE.settings.configuration.info.pageBehavior' defaultPageName=defaultPageName}}
   </p>
   <div class="form-group" style="margin: 10px">
      <button type="button" class="close">
         <i class="fas fa-x"></i>
         Close
      </button>
   </div>
</form>